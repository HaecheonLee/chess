{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src/",
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": ["./src/types"]
    },
    "include": ["./src/server/**/*", "src/commons/**/*"],
    "exclude": ["node_modules", "dist"]
}
