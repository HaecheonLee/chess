{
  "name": "chess",
  "version": "1.0.0",
  "description": "A two-player chess game built with vanilla JavaScript and Node.js.",
  "main": "dist/server/server.js",
  "scripts": {
    "build": "vite build --config ./src/client/vite.config.ts && tsc --project ./src/tsconfig.json",
